{
  "ignore": [
    "*", "docs", "i18n",
    ".cached_tools", ".git", ".tmp", "coverage", "cypress", ".idea",
    "**/*.json", "**/*.yaml", "**/*.svg", "**/*.txt", "**/*.md", "**/OWNERS", "**/.helmignore", "**/*.lock"
  ],
  "license": "../license-header.txt",
  "defaultFormat": {
    "eachLine": {
      "prepend": "# "
    },
    "append": ""
  },
  "licenseFormats": {
    "ts|js|scss": {
      "eachLine": {
        "prepend": "// "
      },
      "append": ""
    },
    "html": {
      "prepend": "<!--",
      "append": "-->"
    }
  },
  "trailingWhitespace": "TRIM"
}
